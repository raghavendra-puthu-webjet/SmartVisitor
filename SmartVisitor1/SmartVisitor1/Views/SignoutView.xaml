<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartVisitor1.Views.SignoutView">
  <StackLayout Padding="20, 0" BackgroundColor="#FFFFFF">
    <Label HorizontalOptions="Center" TextColor="#333" x:Name="TimeLabel" Text="2:30pm" FontSize="30" />
    <Label Margin="5, 0, 0, 10" HorizontalOptions="Center" TextColor="#333" x:Name="DateLabel" Text="20 September 2016" FontSize="12" />

    <StackLayout>
      <Label HorizontalOptions="Center" FontAttributes="Bold" Margin="3, 0, 0, -10" Text="SIGNOUT" TextColor="#333" FontSize="30" />
      <Label HorizontalOptions="Center" FontAttributes="Bold" Margin="0, 0, 0, 10" Text="COMPLETE" TextColor="#333" FontSize="30" />
      <Label HorizontalOptions="Center" x:Name="VisitorName" Margin="0, 0, 0, 25" Text="Mr. Visitor" TextColor="#333" FontSize="27" />
    </StackLayout>

    <StackLayout>
      <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0, 0, 0, 8" Text="Thank you for visiting our Webjet Office." TextColor="#333" FontSize="17" />
    </StackLayout>

    <Button Margin="0, 10, 0 ,0" Text="DONE" BackgroundColor="#2DB300" TextColor="#FFFFFF" Clicked="DoneButton_OnClicked" FontSize="21"/>
  </StackLayout>
</ContentPage>