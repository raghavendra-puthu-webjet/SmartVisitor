<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartVisitor1.Views.ConfirmationView">
  <StackLayout Padding="20, 0" BackgroundColor="#FFFFFF">
    <Label HorizontalOptions="Center" TextColor="#333" x:Name="TimeLabel" Text="2:30pm" FontSize="30" />
    <Label Margin="5, -8, 0, 10" HorizontalOptions="Center" TextColor="#333" x:Name="DateLabel" Text="20 September 2016" FontSize="12" />

    <StackLayout Padding="20, 0, 0, 20">
      <Label Margin="3, 0, 0, 0" Text="THANK YOU!" TextColor="#333" FontSize="30" />
      <Label Margin="3, 0, 0, 0" Text="Mr. Visitor" TextColor="#333" FontSize="15" />
    </StackLayout>

    <StackLayout Padding="20, 0, 0, 20">
      <Label Margin="3, 0, 0, 0" Text="You have succuessfully signed into Webjet Smart Visitor." TextColor="#333" FontSize="15" />
    </StackLayout>

    <StackLayout Padding="20, 0, 0, 20">
      <Label Margin="3, 0, 0, 0" Text="Please retain your ID number and remember to signout when you leave." TextColor="#333" FontSize="15" />
    </StackLayout>

    <Button Margin="0, 10, 0 ,0" Text="DONE" BackgroundColor="#2DB300" TextColor="#FFFFFF" Clicked="DoneButton_OnClicked" FontSize="21"/>
  </StackLayout>
</ContentPage>