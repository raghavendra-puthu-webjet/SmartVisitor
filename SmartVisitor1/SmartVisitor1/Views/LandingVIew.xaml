<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartVisitor1.Views.LandingVIew">
  <StackLayout Padding="20, 0" BackgroundColor="#DC140B">
    <Image Source="wjsmartvisitorlogo.png" ></Image>
    
    <Label x:Name="TimeLabel" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#FFF" Text="2:30pm" FontSize="60" />
    <Label x:Name="DateLabel" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#FFF" Text="20 September 2016" FontSize="20" />

    <Button Margin="0, 25, 0 , 10" Text="START" BackgroundColor="#2BD300" TextColor="#FFF" FontSize="26" Clicked="StartButton_OnClicked" >
    </Button>
    <Button Text="SIGNOUT" BackgroundColor="#DFDFDF" TextColor="#666" FontSize="21" Clicked="EndButton_OnClicked" />
  </StackLayout>
</ContentPage>